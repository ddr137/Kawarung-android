<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp">

    <ImageView
        android:scaleType="fitCenter"
        android:layout_marginStart="15dp"
        android:id="@+id/img_cart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        tools:src="@drawable/beras" />

    <TextView
        android:layout_marginStart="15dp"
        android:id="@+id/label_discount_cart"
        style="@style/TextMedium"
        android:layout_width="30dp"
        android:layout_height="17dp"
        android:background="@color/colorYellow"
        android:textAlignment="center"
        tools:text="10%" />

    <TextView
        android:layout_marginEnd="15dp"
        android:id="@+id/title_product_cart"
        style="@style/TextRegular"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/img_cart"
        tools:text="Beras Cianjur assa sasa sasa sa sa sasedfdsfsdfsdfa" />

    <TextView
        android:id="@+id/price_strikeThrough"
        style="@style/TextRegular"
        android:layout_below="@+id/title_product_cart"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/img_cart"
        tools:text="Rp10.000"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/price_product_cart"
        style="@style/TextSemiBold"
        android:layout_below="@+id/title_product_cart"
        android:layout_toEndOf="@+id/price_strikeThrough"
        tools:text="Rp5.000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/total_qty_cart"
        style="@style/TextRegular"
        android:layout_below="@+id/price_product_cart"
        android:layout_toEndOf="@+id/img_cart"
        tools:text="Jumlah: 1 Kg" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_qty_cart"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="13dp"
        android:layout_marginEnd="15dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/icon_cart_trash"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_trash" />

            <TextView
                style="@style/TextRegular"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/icon_cart_trash"
                android:text="Hapus Produk" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/cv_delete"
        android:layout_marginTop="15dp"
        android:background="@color/colorGray" />

</RelativeLayout>