<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/img_cart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/beras" />

    <TextView
        android:id="@+id/label_discount_cart"
        style="@style/TextMedium"
        android:layout_width="30dp"
        android:layout_height="17dp"
        android:layout_marginStart="15dp"
        android:background="@color/colorYellow"
        android:textAlignment="center"
        tools:text="10%" />

    <TextView
        android:id="@+id/title_product_cart"
        style="@style/TextRegular"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/img_cart"
        tools:text="Beras Cianjur assa sasa sasa sa sa sasedfdsfsdfsdfa" />

    <TextView
        android:id="@+id/price_strikeThrough"
        style="@style/TextRegular"
        android:layout_below="@+id/title_product_cart"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/img_cart"
        android:textSize="11sp"
        tools:text="Rp10.000" />

    <TextView
        android:id="@+id/price_product_cart"
        style="@style/TextSemiBold"
        android:layout_below="@+id/title_product_cart"
        android:layout_toEndOf="@+id/price_strikeThrough"
        android:textSize="14sp"
        tools:text="Rp5.000" />

    <TextView
        android:id="@+id/total_qty_cart"
        style="@style/TextRegular"
        android:layout_below="@+id/price_product_cart"
        android:layout_toEndOf="@+id/img_cart"
        tools:text="Jumlah: 1 Kg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/total_qty_cart"
        android:layout_marginTop="15dp"
        android:background="@color/colorGray" />

</RelativeLayout>