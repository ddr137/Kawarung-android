<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ui.home.ListProductActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_discount_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightRed"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_trend_product"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme">

            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorWhite"
                android:text="Judul"
                android:id="@+id/toolbar_title_list_product"
                style="@style/TextRegular"
                android:textSize="20sp" />


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="@dimen/margin_space"
        android:id="@+id/rv_trend_categories_more"
        android:layout_width="0dp"
        android:foregroundGravity="center_horizontal"
        android:layout_height="0dp"
        tools:listitem="@layout/item_product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar_discount_product" />

</androidx.constraintlayout.widget.ConstraintLayout>