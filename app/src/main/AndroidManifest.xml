<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nahltech.kawarung">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.nahltech.kawarung.ui.home.DetailProductActivity" />
        <activity android:name="com.nahltech.kawarung.ui.profile.BankAccountActivity" />
        <activity android:name="com.nahltech.kawarung.ui.profile.ChangePasswordActivity" />
        <activity android:name="com.nahltech.kawarung.ui.profile.EditAddressActivity" />
        <activity android:name="com.nahltech.kawarung.ui.profile.EditProfileActivity" />
        <activity android:name="com.nahltech.kawarung.ui.home.TrendProductActivity" />
        <activity android:name="com.nahltech.kawarung.ui.home.NewProductActivity" />
        <activity android:name="com.nahltech.kawarung.auth.RegisterActivity" />
        <activity android:name="com.nahltech.kawarung.MainActivity" />
        <activity android:name="com.nahltech.kawarung.auth.LoginActivity" />
        <activity
            android:name="com.nahltech.kawarung.SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>